{
  "compilerOptions": {
    "experimentalDecorators": true,
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "target": "es2020",
    "jsx": "react-jsx",

    "skipLibCheck": true // remove checks while @grpc/grpc-js is broken
  },
  "compileOnSave": true,
  "include": [
    "src"
  ]
}
